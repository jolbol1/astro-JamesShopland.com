---
interface Props {
  children: any
  className?: string
  [key: string]: any
}

const { className } = Astro.props
---

<div class:list={["group relative", className]}>
  <div
    class="absolute -inset-px z-[-1] rounded-xl bg-gradient-to-r from-blue-600 to-cyan-600 opacity-0 blur-lg transition-all duration-1000 group-hover:-inset-1 group-hover:opacity-100 group-hover:duration-200"
  >
  </div>
  <slot />
</div>
