---
import FourZeroFour from "@/assets/images/404.png"
import Layout from "@/layouts/Layout.astro"
import { Image } from "astro:assets"

import { Link } from "@/components/ui/link"
---

<Layout title="404">
  <div class="flex flex-col items-center px-4 sm:px-8">
    <Image
      priority={true}
      src={FourZeroFour}
      height={320}
      quality={50}
      layout="fixed"
      alt={"cartoon james shopland looking confused"}
    />
    <h1
      class="mt-6 w-full text-center text-6xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100 md:text-8xl"
    >
      404
    </h1>
    <div class="flex max-w-md flex-col">
      <p
        class="mb-4 text-balance text-center text-xl font-bold leading-normal md:text-2xl"
      >
        Sorry this page could not be found
      </p>
      <Link href="/"> Back to homepage </Link>
    </div>
  </div>
</Layout>
